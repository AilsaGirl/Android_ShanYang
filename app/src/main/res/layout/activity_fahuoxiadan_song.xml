<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.circle.common.view.MyToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relHead"
            android:visibility="visible"
            android:layout_below="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <com.amap.api.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tvJuLi"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:background="#50000000"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="5dp"
                android:text=""
                android:textColor="@color/hl_white" />
        </RelativeLayout>
            <LinearLayout
                android:id="@+id/linInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dingdan_bg"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/relFa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                >

                <LinearLayout
                    android:id="@+id/linFa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/tvFaJL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hl_6x3"
                        android:textSize="12dp"
                        android:background="@mipmap/icon_wizhilvfa"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/linFa"
                    android:layout_toLeftOf="@+id/tvDiZhiChangYongFa"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tvDiZhiFa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="请选择发货地址"
                            android:textColorHint="#bbbbbb"
                            android:textColor="@color/hl_6x3"
                            android:textSize="@dimen/textSize_12"
                            android:singleLine="true"
                            android:ellipsize="end"
                            />
                        <TextView
                            android:id="@+id/tvDiZhiXiangQingFa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColorHint="#bbbbbb"
                            android:textColor="@color/hl_6x6"
                            android:textSize="@dimen/textSize_12"
                            android:hint="如:楼号、楼层和门牌号"
                            android:singleLine="true"
                            android:ellipsize="end"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvTelFa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hl_6x3"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/textSize_12"
                        android:text=""
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvDiZhiChangYongFa"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@drawable/zhuce_bg"
                    android:text="常用"
                    android:textColor="@color/hl_white"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="1dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hl_6xb"
                android:layout_marginBottom="5dp"
                />
            <RelativeLayout
                android:id="@+id/relShou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                >

                <LinearLayout
                    android:id="@+id/linShou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/tvShouJL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hl_6x3"
                        android:textSize="12dp"
                        android:background="@mipmap/icon_weizhihongshou"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linAddressShou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/linShou"
                    android:layout_toLeftOf="@+id/tvDiZhiChangYongShou"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tvDiZhiShou"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="请选择收地址"
                            android:textColorHint="#bbbbbb"
                            android:textColor="@color/hl_6x3"
                            android:textSize="@dimen/textSize_12"
                            android:singleLine="true"
                            android:ellipsize="end"
                            />
                        <TextView
                            android:id="@+id/tvDiZhiXiangQingShou"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColorHint="#bbbbbb"
                            android:textSize="@dimen/textSize_12"
                            android:textColor="@color/hl_6x6"
                            android:hint="如:楼号、楼层和门牌号"
                            android:singleLine="true"
                            android:ellipsize="end"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvTelShou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hl_6x3"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/textSize_12"
                        android:text=""
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvDiZhiChangYongShou"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@drawable/zhuce_bg"
                    android:text="常用"
                    android:textColor="@color/hl_white"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="1dp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="其他选项"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/tab_color"
                />
        </LinearLayout>
                <LinearLayout
                    android:id="@+id/linOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dingdan_bg"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    >
            <LinearLayout
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/textSize_13"
                    android:layout_weight="1"
                    android:text="立取 >"
                    />
                <TextView
                    android:id="@+id/tvGongJu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tab_color"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/textSize_13"
                    android:text="两轮车 >"
                    />
                <TextView
                    android:id="@+id/tvZhongLiang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/textSize_13"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="10公斤内 >"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/cbBaoWen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/textSize_13"
                    android:layout_weight="1"
                    android:text="保温箱"
                    />
                <TextView
                    android:id="@+id/tvBaoJia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/textSize_13"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="不保价 >"
                    />
                <TextView
                    android:id="@+id/tvHuoType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/textSize_13"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="生活用品 >"
                    />

            </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/hl_6xb"
                        android:layout_marginBottom="5dp"
                        />
                    <EditText
                        android:id="@+id/etMsg"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/textSize_13"
                        android:background="#ffffff"
                        android:hint="订单备注"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/hl_6xb"
                        android:layout_marginBottom="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize_13"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/hl_6x3"
                            android:text="小费："
                            />
                        <EditText
                            android:id="@+id/etTip"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="3"
                            android:layout_marginLeft="10dp"
                            android:inputType="number"
                            android:maxEms="10"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/textSize_13"
                            android:background="#ffffff"
                            android:hint="接单员小费"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/hl_6xb"
                            />
                        <EditText
                            android:id="@+id/etTel"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textSize="@dimen/textSize_13"
                            android:background="#ffffff"
                            android:hint="选填 指定接单员（手机号）"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/hl_6xb"
                        android:layout_marginBottom="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        >
                        <CheckBox
                            android:id="@+id/ckTY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hl_6x3"
                            android:textSize="14dp"
                            android:text="已阅读并同意"
                            />
                        <TextView
                            android:id="@+id/tvXieYi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="14dp"
                            android:textColor="#E03D81"
                            android:text="《发单协议》"
                            />
                        <TextView
                            android:id="@+id/tvYouHuiQuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:gravity="right"
                            android:textSize="14dp"
                            android:textColor="#E03D81"
                            android:text="优惠券》"
                            />
                    </LinearLayout>


            </LinearLayout>
                <LinearLayout
                    android:id="@+id/linXieYi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    >
                    <CheckBox
                        android:id="@+id/ckTY1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hl_6x3"
                        android:textSize="14dp"
                        android:text="已阅读并同意"
                        />
                    <TextView
                        android:id="@+id/tvXieYi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="14dp"
                        android:textColor="#E03D81"
                        android:text="《发单协议》"
                        />
                    <TextView
                        android:id="@+id/tvYouHuiQuan1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="right"
                        android:textSize="14dp"
                        android:textColor="#E03D81"
                        android:text="优惠券》"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hl_6xb"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="#E03D81"
                        android:text=""
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/tvBianZun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#E03D81"
                        android:layout_marginLeft="13dp"
                        android:text="计费标准》"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:id="@+id/tvXiaDan"
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:background="#E03D81"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="@color/hl_white"
                        android:text="下单"
                        />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>