<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.circle.common.view.MyToolBar
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</com.circle.common.view.MyToolBar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hl_6x3"
        android:layout_margin="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        android:text="更新手机号之后，下次登录可用新的手机号"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/hl_6x3"
            android:layout_marginRight="5dp"
            android:text="手机号："
            />
        <EditText
            android:id="@+id/etTel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bangwomai_bg"
            android:inputType="number"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/hl_6x3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/hl_6x3"
            android:layout_marginRight="5dp"
            android:text="验证码："
            />
        <EditText
            android:id="@+id/etYanZhengMa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bangwomai_bg"
            android:layout_weight="1"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/hl_6x3"
            android:inputType="number"
            android:hint="请输入验证码"
            />
        <TextView
            android:id="@+id/tvSendYZM"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/hl_white"
            android:gravity="center"
            android:background="@color/tab_color"
            android:text="获取验证码"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvOk"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="@dimen/textSize_14"
        android:textColor="@color/hl_white"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/tab_color"
        android:text="确定"
        />

</LinearLayout>