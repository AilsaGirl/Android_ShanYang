<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="10dp"
    android:gravity="bottom"
    >
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSize_18"
            android:gravity="center"
            android:textColor="@color/hl_6x3"
            android:text="付款详情"
            />
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/guanbi_hei"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_16"
            android:gravity="center"
            android:textColor="@color/hl_6x3"
            android:text="需支付金额"
            />
        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_16"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/tab_color"
            android:text="0"
            />
    </LinearLayout>
<TextView
    android:id="@+id/tvZhiFuBao"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:textSize="@dimen/textSize_14"
    android:drawableLeft="@mipmap/zhifubaoz"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginTop="10dp"
    android:drawablePadding="15dp"
    android:gravity="center_vertical"
    android:drawableRight="@mipmap/zhong"
    android:textColor="@color/hl_6x3"
    android:text="支付宝"
    />
    <TextView
        android:id="@+id/tvWeiXin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="@dimen/textSize_14"
        android:drawableLeft="@mipmap/wx"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/weixuanzhongx"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/hl_6x3"
        android:text="微信"
    />
    <TextView
        android:id="@+id/tvWanNengYve"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="@dimen/textSize_14"
        android:drawableLeft="@mipmap/yuee"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/weixuanzhongx"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/hl_6x3"
        android:text="提现余额"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/hl_6x9"
        />
    <TextView
        android:id="@+id/tvYve"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="@dimen/textSize_14"
        android:drawableLeft="@mipmap/yuee"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/weixuanzhongx"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/hl_6x3"
        android:text="发货余额"
        />
    <Button
        android:id="@+id/zfBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="确认付款"
        android:textColor="@color/hl_white"
        android:textSize="18dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/login_button_selector"/>
</LinearLayout>