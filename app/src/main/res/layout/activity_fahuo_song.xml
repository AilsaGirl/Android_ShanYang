<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.circle.common.view.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.circle.common.view.MyToolBar>
    <LinearLayout
        android:id="@+id/linSouSuo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Iv_back"
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/fanhui" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCity"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/hl_6x3"
                android:textSize="14dp"
                android:text="聊城"
                />

            <LinearLayout
                android:id="@+id/ll_new_location_map"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--// android:background="@mipmap/sousuobeijing"-->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/sousuox" />

                <AutoCompleteTextView
                    android:id="@+id/AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:dropDownVerticalOffset="10dp"
                    android:dropDownWidth="match_parent"
                    android:gravity="center_vertical"
                    android:hint="物品送到哪里去"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tx_sousuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:text="搜索"
                android:textColor="@color/hl_6x3" />
        </LinearLayout>
        <ListView
            android:id="@+id/sousuo_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#EBEBEB"
            android:visibility="visible"
            android:dividerHeight="1dp"
            android:background="@color/white"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linAddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/relSouSuo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            >
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivSouSuo"
                android:textColor="#101010"
                android:textSize="@dimen/textSize_14"
                android:text="创业大赛"
                />
            <TextView
                android:id="@+id/tvXiangXi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_13"
                android:layout_below="@+id/tvAddress"
                android:layout_toLeftOf="@+id/ivSouSuo"
                android:layout_marginTop="2dp"
                android:textColor="#bbbbbb"
                android:text="创业大赛"
                />

            <ImageView
                android:id="@+id/ivSouSuo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiangyou"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbbbbb"
            />
        <EditText
            android:id="@+id/etDiZhi"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:textColor="#888888"
            android:paddingLeft="10dp"
            android:textSize="@dimen/textSize_14"
            android:hint="详细地址，楼号，楼层，和门牌号。"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbbbbb"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/etName"
                android:layout_width="113dp"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:textColor="#888888"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textSize_14"
                android:hint="姓名"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#bbbbbb"
                />

            <EditText
                android:id="@+id/etTel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="请输入发货人手机号"
                android:paddingLeft="10dp"
                android:textColor="#888888"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="@dimen/textSize_14" />
            <ImageView
                android:id="@+id/ivTongXun"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@mipmap/sousuobx"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbbbbb"
            />
    </LinearLayout>

    <com.amap.api.maps.MapView
        android:id="@+id/map_local"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/linFuJin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvFuJin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14"
                android:textColor="#E03D81"
                android:text="附近地址"
                />
            <View
                android:id="@+id/vFuJin"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#E03D81"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linChangYong"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvChangYong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14"
                android:textColor="#191919"
                android:text="常用地址"
                />
            <View
                android:id="@+id/vChangYong"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:background="#E03D81"
                />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/map_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:divider="#EBEBEB"
        android:visibility="visible"
        android:dividerHeight="1dp"
        android:background="@color/white"
        android:scrollbars="none" />
    <LinearLayout
        android:id="@+id/linChangYongDiZhi"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#ffffff"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:id="@+id/relMoRen"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="60dp">
                        <ImageView
                            android:id="@+id/ivMoRenAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/icon_dizhi"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ivMoRenAddress"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="3dp"
                                    android:text="默认地址"
                                    android:textColorHint="#bbbbbb"
                                    android:textColor="@color/hl_6x3"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textSize="14dp"
                                    />
                                <TextView
                                    android:id="@+id/tvMoRenDiZhi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:hint="请填写地址"
                                    android:textColor="@color/hl_6x8"
                                    android:textSize="13dp"
                                    android:singleLine="true"
                                    android:ellipsize="start"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/hl_46xb"
                        />
                    <RelativeLayout
                        android:id="@+id/relGongSi"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="60dp">
                        <ImageView
                            android:id="@+id/ivGongSiAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/icon_gongsi"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ivGongSiAddress"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="3dp"
                                    android:text="公司"
                                    android:textColorHint="#bbbbbb"
                                    android:textColor="@color/hl_6x3"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textSize="18dp"
                                    />
                                <TextView
                                    android:id="@+id/tvGongSiDiZhi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:hint="请填写地址"
                                    android:textColor="@color/hl_6x8"
                                    android:textSize="14dp"
                                    android:singleLine="true"
                                    android:ellipsize="start"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/hl_46xb"
                        />
                    <RelativeLayout
                        android:id="@+id/relJia"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <ImageView
                            android:id="@+id/ivJiaAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/icon_jia"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/ivJiaAddress"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="3dp"
                                    android:text="家"
                                    android:textColorHint="#bbbbbb"
                                    android:textColor="@color/hl_6x3"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textSize="18dp"
                                    />
                                <TextView
                                    android:id="@+id/tvJiaDiZhi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:hint="请填写地址"
                                    android:textColor="@color/hl_6x8"
                                    android:textSize="14dp"
                                    android:singleLine="true"
                                    android:ellipsize="start"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#bbbbbb"
                    />
                <com.jcodecraeer.xrecyclerview.XRecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:cacheColorHint="@null"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>

    </LinearLayout>

</LinearLayout>
