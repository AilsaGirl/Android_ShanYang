<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   android:scrollbars="none"
    android:background="#f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.circle.common.view.MyToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/hl_white"
            android:textSize="14dp"
            android:padding="10dp"
            android:textColor="@color/hl_6x3"
            android:text=""
            />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/hl_white"
            android:layout_marginBottom="3dp"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人："
                    android:textColor="@color/hl_6x3"
                    />
                <TextView
                    android:id="@+id/tvRen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=" "
                    android:textColor="@color/hl_6x3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号："
                    android:textColor="@color/hl_6x3"
                    />
                <TextView
                    android:id="@+id/tvTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/hl_6x3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址："
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/hl_6x3"
                    />
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/hl_6x3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址："
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/hl_6x3"
                    />
                <TextView
                    android:id="@+id/tvMoreAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/hl_6x3"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/hl_white"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:layout_marginBottom="10dp"
                android:text="约定时间：立取"
                />
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvChouJin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:layout_weight="1"
                android:text="酬金："
                />
            <TextView
                android:id="@+id/tvHuoKuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:text="￥00"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="追加小费："
                    />
                <TextView
                    android:id="@+id/tvXiaoFei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:text="￥00"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:text="合计："
                    />
                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tab_color"
                    android:text="￥"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            android:background="@color/hl_white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvBianHao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:layout_marginBottom="10dp"
                android:text="订单编号："
                />
            <TextView
                android:id="@+id/tvShiJian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:text="创建时间："
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linJieDan"
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            android:background="@color/hl_white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvJieDanRen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:layout_marginBottom="10dp"
                android:text="接单人："
                />
            <TextView
                android:id="@+id/tvJieDanRenTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:text="手机号："
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linFuKuan"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvShanChu"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textColor="@color/hl_white"
                android:background="@drawable/zhuce_bg"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:textSize="16dp"
                android:text="删除订单"
                />
            <TextView
                android:id="@+id/tvZhiFu"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/hl_white"
                android:background="@drawable/zhuce_bg"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textSize="16dp"
                android:text="去支付"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvQiangDan"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/hl_white"
            android:background="@drawable/zhuce_bg"
            android:text="抢单"
            />
        <LinearLayout
            android:id="@+id/linQuHuo"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvCheXiao"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/hl_white"
                android:background="@drawable/zhuce_bg"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="16dp"
                android:text="撤销订单"
                />
            <TextView
                android:id="@+id/tvJiaJia"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/hl_white"
                android:background="@drawable/zhuce_bg"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="16dp"
                android:text="订单加价"
                />
            <TextView
                android:id="@+id/tvQueQen"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/hl_white"
                android:background="@drawable/zhuce_bg"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="16dp"
                android:text="确认订单"
                />
            <TextView
                android:id="@+id/tvZhuanRang"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/hl_white"
                android:background="@drawable/zhuce_bg"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="16dp"
                android:text="转让订单"
                />
        </LinearLayout>
    </LinearLayout>


</ScrollView>