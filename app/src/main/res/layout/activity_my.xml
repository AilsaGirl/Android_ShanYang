<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <View
       android:layout_width="match_parent"
       android:layout_height="26dp"
       android:background="@mipmap/tool"
       />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#fff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/back_gray"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civHead"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/sanyangtubiao"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/hl_6x3"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="我的昵称"
                    />
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/hl_6x3"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:text="我的手机："
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"

                    >
                    <LinearLayout
                        android:id="@+id/linFaHuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hl_6x3"
                            android:textSize="14dp"
                            android:text="发货余额（元）"
                            />
                        <TextView
                            android:id="@+id/tvFaHuoNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hl_6x3"
                            android:layout_marginTop="6dp"
                            android:textSize="14dp"
                            android:text=""
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvChongZgi"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/zhuce_bg"
                        android:gravity="center"
                        android:text="充值"
                        android:textColor="#fff" />
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:background="#BBBBBB"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"

                    >
                    <TextView
                        android:id="@+id/tvTiXian"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/zhuce_bg"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="提现"
                        />
                    <LinearLayout
                        android:id="@+id/linTiXian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hl_6x3"
                            android:textSize="14dp"
                            android:text="提现余额（元）"
                            />
                        <TextView
                            android:id="@+id/tvTiXianNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hl_6x3"
                            android:layout_marginTop="6dp"
                            android:textSize="14dp"
                            android:text=""
                            />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/icon_zhanghu"
                app:hlMenuLeftText="账户设置"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvYaoQingMa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hlMenuLeftIcon="@mipmap/yaoqingma"
                android:layout_marginTop="1dp"
                app:hlMenuLeftText="我的邀请码"
                android:background="@color/hl_white"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvDingDan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/icon_dingdanguanli"
                app:hlMenuLeftText="订单管理"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/icon_dizhiguanli"
                app:hlMenuLeftText="地址管理"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvQuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/icon_wodeyouhuiquan"
                app:hlMenuLeftText="我的优惠券"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvJieDanYan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/icon_shenqingjiedanyuan"
                app:hlMenuLeftText="申请接单员"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvKeFu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/icon_lianxikefu"
                app:hlMenuLeftText="联系客服"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvHeiMingDan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/heimingdan"
                app:hlMenuLeftText="黑名单"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/icon_gengduo"
                app:hlMenuLeftText="更多服务/奖励"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>