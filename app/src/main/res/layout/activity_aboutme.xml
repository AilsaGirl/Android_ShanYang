<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.circle.common.view.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.circle.common.view.MyToolBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#fff"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="#fff"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civHead"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/sanyangtubiao"
                    />

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="三羊跑腿"
                    android:textColor="@color/hl_6x3"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tvBanBen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/hl_6x3"
                    android:layout_marginTop="3dp"
                    android:text="v2.0.0"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvGongGao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/i_gonggao"
                app:hlMenuLeftText="三羊公告"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvXinWen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/i_xinwen"
                app:hlMenuLeftText="三羊新闻"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvGuiZe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/i_guize"
                app:hlMenuLeftText="三羊规则"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvGongNeng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/i_gongneng"
                app:hlMenuLeftText="功能介绍"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <com.liaocheng.suteng.myapplication.view.CustomMenuView
                android:id="@+id/cmvAboutGongSi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hl_white"
                app:hlMenuLeftIcon="@mipmap/i_gongsi"
                app:hlMenuLeftText="关于公司"
                app:hlMenuRightTextVisible="gone"
                app:hlMenuUnderLineVisible="visible"
                />
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn_bg"
                android:textColor="@color/white"
                android:text="检查版本"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>