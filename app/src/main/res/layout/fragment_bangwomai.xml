<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/etMai"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_margin="2dp"
    android:background="@drawable/bangwomai_bg"
    android:gravity="center_vertical"
    android:hint="请输入要买什么，商品描述及备注"
    android:drawableRight="@mipmap/xiangyou"
    android:textSize="14dp"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <ImageView
            android:id="@+id/ivAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_weizhihongshou"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivAddress"
            android:layout_toLeftOf="@+id/tvDiZhiChangYong"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tvDiZhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="请选择购买地址"
                    android:textColorHint="#bbbbbb"
                    android:textColor="@color/hl_6x3"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/tvDiZhiXiangQing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColorHint="#bbbbbb"
                    android:textColor="@color/hl_6x6"
                    android:hint="如:楼号、楼层和门牌号"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:layout_marginLeft="5dp"
                android:text="18888888888"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvDiZhiChangYong"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/zhuce_bg"
            android:text="常用"
            android:textColor="@color/hl_white"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</LinearLayout>