<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.circle.common.view.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.circle.common.view.MyToolBar>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="15dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:textColor="@color/hl_6x3"
    android:layout_marginTop="25dp"
    android:text="输入旧支付密码"
    />
   <EditText
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:layout_marginTop="10dp"
       android:id="@+id/etMiMa"
       android:background="@color/hl_white"
       android:hint="输入旧支付密码"
       android:paddingRight="15dp"
       android:paddingLeft="15dp"
       android:inputType="numberPassword"
       android:maxLength="4"
       android:textColor="@color/hl_6x3"
       android:textSize="@dimen/textSize_15"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColor="@color/hl_6x3"
        android:layout_marginTop="10dp"
        android:text="输入新支付密码"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:id="@+id/etMiMaQueRen"
        android:background="@color/hl_white"
        android:hint="输入新支付密码"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:textColor="@color/hl_6x3"
        android:textSize="@dimen/textSize_15"
        />
    <TextView
        android:id="@+id/tvOk"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="@dimen/textSize_14"
        android:textColor="@color/hl_white"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/tab_color"
        android:text="确定"
        />
</LinearLayout>