<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.circle.common.view.MyToolBar
    android:id="@+id/myToolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</com.circle.common.view.MyToolBar>
<TextView
    android:padding="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/tab_color"
    android:textSize="@dimen/textSize_14"
    android:text="实名认证成功，认证信息成功。"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@drawable/dingdan_bg"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tvTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hl_6x3"
            android:textSize="@dimen/textSize_14"
            android:text=""
            />
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/hl_6x3"
            android:textSize="@dimen/textSize_14"
            android:text=""
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/hl_6x3"
                android:textSize="@dimen/textSize_14"
                android:text=""
                />
            <TextView
                android:id="@+id/tvMinZhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/hl_6x3"
                android:textSize="@dimen/textSize_14"
                android:text=""
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/hl_6x3"
            android:textSize="@dimen/textSize_14"
            android:text=""
            />
        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/hl_6x3"
            android:textSize="@dimen/textSize_14"
            android:text=""
            />
        <TextView
            android:id="@+id/tvJiGuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/hl_6x3"
            android:textSize="@dimen/textSize_14"
            android:text=""
            />
        <TextView
            android:id="@+id/tvQiXian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/hl_6x3"
            android:textSize="@dimen/textSize_14"
            android:text=""
            />
    </LinearLayout>
    <TextView
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tab_color"
        android:textSize="@dimen/textSize_14"
        android:text="请选择支付押金方式："
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@drawable/dingdan_bg"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@mipmap/zhong"
                android:checked="false"
                android:paddingLeft="10dp"
                android:text="同意提交200元保证金"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@mipmap/zhong"
                android:checked="true"
                android:paddingLeft="10dp"
                android:text="同意提交200元培训费和装备费"
                />
            <TextView
               android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_color"
                android:textSize="@dimen/textSize_14"
                android:text=" 《接单员协议》"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@mipmap/zhong"
                android:checked="true"
                android:paddingLeft="10dp"
                android:text="同意购买100元保险"
                />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_color"
                android:textSize="@dimen/textSize_14"
                android:text=" 《接单员协议》"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linBaoZhengJin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@mipmap/weixuanzhongx"
                android:paddingLeft="10dp"
                android:text="保证金协议扣款"
                />
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_color"
                android:visibility="gone"
                android:textSize="@dimen/textSize_14"
                android:text=" 《保证金协议》"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linBaoXianJin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@mipmap/weixuanzhongx"
                android:paddingLeft="10dp"
                android:text="保险金协议扣款"
                />
            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_color"
                android:textSize="@dimen/textSize_14"
                android:visibility="gone"
                android:text=" 《保险金协议》"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@mipmap/weixuanzhongx"
                android:paddingLeft="10dp"
                android:text="同意缴费500元，保底三千"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@mipmap/weixuanzhongx"
                android:paddingLeft="10dp"
                android:text="同意缴费700元，保底五千"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/cb8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/zhong"
            android:paddingLeft="10dp"
            android:checked="true"
            android:text="确认支付证明你已同意"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/textSize_14"
            android:text=" 《接单员协议》"

            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/tab_color"
        android:textColor="@color/white"
        android:text="确认支付"
        />
</LinearLayout>