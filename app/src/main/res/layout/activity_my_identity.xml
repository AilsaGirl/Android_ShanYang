<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <LinearLayout
        android:id="@+id/linRenZheng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.circle.common.view.MyToolBar
            android:id="@+id/mybar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.circle.common.view.MyToolBar>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="拍摄您的二代身份证原件。请确保图片清晰，四角完整"
        android:textSize="13sp" />


        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="137dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/renxiang_shanchu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/sanchu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IV_face_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:src="@mipmap/renxiangt" />

            <ImageView
                android:id="@+id/renxiang_fangda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/chakan"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="137dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/guohui_shanchu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/sanchu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IV_reverse_side"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:src="@mipmap/guohuit" />

            <ImageView
                android:id="@+id/guohuo_fangda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/chakan"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="137dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/he_shanchu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/sanchu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IV_reverse_he"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:scaleType="centerCrop"
                android:src="@mipmap/shouchizhengjian" />

            <ImageView
                android:id="@+id/he_fangda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/chakan"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/zhima"
        android:visibility="gone"
        android:background="#5e000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/dingdan_bg"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/tvMsg"
                android:text="您的身份证信息已提交 ! /n 请进行芝麻认证"
                android:textSize="20dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/xiugai"
                    android:text="修改信息"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/dingdan_bg"
                    android:layout_margin="6dp"
                    android:textSize="17dp"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/q_renzheng"
                    android:text="去认证"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/login_btn_bg"
                    android:layout_margin="6dp"
                    android:textSize="17dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>