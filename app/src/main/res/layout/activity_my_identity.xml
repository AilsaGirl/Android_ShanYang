<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <com.circle.common.view.MyToolBar
        android:id="@+id/mybar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.circle.common.view.MyToolBar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="拍摄您的二代身份证原件。请确保图片清晰，四角完整"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="137dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/renxiang_shanchu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/sanchu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IV_face_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:src="@mipmap/renxiangt" />

            <ImageView
                android:id="@+id/renxiang_fangda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/chakan"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="137dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/guohui_shanchu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/sanchu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IV_reverse_side"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:src="@mipmap/guohuit" />

            <ImageView
                android:id="@+id/guohuo_fangda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/chakan"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="137dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/he_shanchu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/sanchu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IV_reverse_he"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:scaleType="centerCrop"
                android:src="@mipmap/shouchizhengjian" />

            <ImageView
                android:id="@+id/he_fangda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@mipmap/chakan"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>