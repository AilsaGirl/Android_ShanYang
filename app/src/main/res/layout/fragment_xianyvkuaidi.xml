<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/ivFaAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_wizhilvfa"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivFaAddress"
            android:layout_toLeftOf="@+id/tvFaDiZhiChangYong"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tvFaDiZhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="请选择发货地址"
                    android:textColorHint="#bbbbbb"
                    android:textColor="@color/hl_6x3"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvFaTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:layout_marginLeft="5dp"
                android:text="18888888888"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvFaDiZhiChangYong"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/dizhi_bg"
            android:text="常用"
            android:textColor="@color/hl_white"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hl_6xb"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/ivShouAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_weizhihongshou"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivShouAddress"
            android:layout_toLeftOf="@+id/tvShouDiZhiChangYong"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tvShouDiZhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="请选择收货地址"
                    android:textColorHint="#bbbbbb"
                    android:textColor="@color/hl_6x3"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:layout_marginLeft="5dp"
                android:text="18888888888"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvShouDiZhiChangYong"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/dizhi_bg"
            android:text="常用"
            android:textColor="@color/hl_white"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</LinearLayout>