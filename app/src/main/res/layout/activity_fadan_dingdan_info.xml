<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/hl_6x3"
            android:gravity="center_horizontal"
            android:text="订单编号：888888888"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dingdan_bg"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:id="@+id/tvFaName"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/hl_6x3"
                    android:text="发货人："
                    />
                <TextView
                    android:id="@+id/tvFaTel"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/hl_6x3"
                    android:text=""
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/relFa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                >

                <LinearLayout
                    android:id="@+id/linFa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/tvFaJL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hl_6x3"
                        android:textSize="12dp"
                        android:text="发货地"
                        />
                    <TextView
                        android:id="@+id/tvFa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/hl_6x3"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp"
                        android:text=""
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvFaHuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/linFa"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/hl_6x3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="16dp"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tvFaHUoXQ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/linFa"
                    android:layout_below="@+id/tvFaHuo"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#BBBBBB"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:text=""
                    />
                <ImageView
                    android:id="@+id/ivFaTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@mipmap/dianhualv"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                >
                <TextView
                    android:id="@+id/tvShouName"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/hl_6x3"
                    android:text="发货人："
                    />
                <TextView
                    android:id="@+id/tvShouTel"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/hl_6x3"
                    android:text=""
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                >
                <LinearLayout
                    android:id="@+id/linShou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/tvShouJL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hl_6x3"
                        android:textSize="12dp"
                        android:text="收货地："
                        />
                    <TextView
                        android:id="@+id/tvShou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/hl_6x3"
                        android:textSize="12dp"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvShouHuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/linShou"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/hl_6x3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="16dp"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tvShouHUoXQ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/linShou"
                    android:layout_below="@+id/tvShouHuo"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#BBBBBB"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:text=""
                    />
                <ImageView
                    android:id="@+id/ivShouTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@mipmap/dianhualv"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hl_6xb"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="更多信息"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/tab_color"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linFeiYong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dingdan_bg"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:visibility="gone"
            android:orientation="vertical"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="约定时间:立取"
                    />
                <TextView
                    android:id="@+id/tvHuoType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="货品:生活用品"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvGongJu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="交通工具:三轮车"
                    />
                <TextView
                    android:id="@+id/tvBaoWenXiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="保温箱:需要"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="备注信息："
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="费用说明："
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x6"
                    android:text="已支付"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="跑腿费用："
                    />
                <TextView
                    android:id="@+id/tvPaoTui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:text="￥0.00元"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="订单加价："
                    />
                <TextView
                    android:id="@+id/tvDingDanJiaJia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:text="￥0.00元"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="打赏小费："
                    />
                <TextView
                    android:id="@+id/tvXiaoFei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:text="￥0.00元"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="保价服务："
                    />
                <TextView
                    android:id="@+id/tvBaoJia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:text="￥0.00元"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="优惠券："
                    />
                <TextView
                    android:id="@+id/tvYouHuiQuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:text="￥0.00元"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:layout_weight="1"
                    android:text="重量："
                    />
                <TextView
                    android:id="@+id/tvZhongliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x3"
                    android:text="￥0.00元"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvQuanCheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x6"
                    android:layout_weight="1"
                    android:text="全程约：0公里"
                    />
                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_6x6"
                    android:text="接单总计：￥0.00元"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvBianHao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:text="订单编号："
                />
            <TextView
                android:id="@+id/tvShiJian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_6x3"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:text="创建时间："
                />
            <LinearLayout
                android:id="@+id/linJieDan"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<TextView
    android:id="@+id/tvName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:textSize="14dp"
    android:textColor="@color/hl_6x3"
    android:text="接单人"
    />
                <TextView
                    android:id="@+id/tvTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/hl_6x3"
                    android:text="12334"
                    />
                <TextView
                    android:id="@+id/tvLaHei"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/zhuce_bg"
                    android:text="拉黑"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/hl_white"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvZhiFu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/hl_white"
            android:background="@drawable/zhuce_bg"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="16dp"
            android:text="去支付"
            />
        <LinearLayout
            android:id="@+id/linQiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvQueRen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:visibility="visible"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/hl_white"
                android:background="@drawable/zhuce_bg"
                android:text="确认订单"
                />
            <TextView
                android:id="@+id/tvJiaJia"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:visibility="visible"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/hl_white"
                android:background="@drawable/zhuce_bg"
                android:text="订单加价"
                />
            <TextView
                android:id="@+id/tvCheXiao"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:visibility="visible"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/hl_white"
                android:background="@drawable/zhuce_bg"
                android:text="撤销订单"
                />
        </LinearLayout>


    </LinearLayout>

</ScrollView>